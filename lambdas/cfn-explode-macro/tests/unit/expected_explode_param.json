{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Metadata": {
        "cfn-lint": {
            "config": {
                "ignore_checks": [
                    "E3001",
                    "E3012",
                    "W7001"
                ]
            }
        }
    },
    "Parameters": {
        "Ports": {
            "Default": "[]",
            "Description": "The ports to open",
            "Type": "List<Number>"
        }
    },
    "Resources": {
        "SecurityGroupPort22": {
            "Properties": {
                "GroupDescription": "Instance security group",
                "SecurityGroupEgress": [
                    {
                        "CidrIp": "0.0.0.0/0",
                        "FromPort": -1,
                        "IpProtocol": "-1",
                        "ToPort": -1
                    }
                ],
                "SecurityGroupIngress": [
                    {
                        "CidrIp": "0.0.0.0/0",
                        "FromPort": 22,
                        "IpProtocol": "tcp",
                        "ToPort": 22
                    }
                ]
            },
            "Type": "AWS::EC2::SecurityGroup"
        },
        "SecurityGroupPort80": {
            "Properties": {
                "GroupDescription": "Instance security group",
                "SecurityGroupEgress": [
                    {
                        "CidrIp": "0.0.0.0/0",
                        "FromPort": -1,
                        "IpProtocol": "-1",
                        "ToPort": -1
                    }
                ],
                "SecurityGroupIngress": [
                    {
                        "CidrIp": "0.0.0.0/0",
                        "FromPort": 80,
                        "IpProtocol": "tcp",
                        "ToPort": 80
                    }
                ]
            },
            "Type": "AWS::EC2::SecurityGroup"
        }
    },
    "Transform": "Explode"
}
