{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Transform": "Explode",
    "Mappings": {
        "BucketMap": {
            "Monthly": {
                "ResourceName": "MyThirtyDayBucket",
                "Retention": 30
            },
            "Yearly": {
                "Retention": 365
            }
        }
    },
    "Metadata": {
        "cfn-lint": {
            "config": {
                "ignore_checks": [
                    "E3001",
                    "E3012",
                    "W7001"
                ]
            }
        }
    },
    "Resources": {
        "Bucket": {
            "ExplodeMap": "BucketMap",
            "Type": "AWS::S3::Bucket",
            "Properties": {
                "LifecycleConfiguration": {
                    "Rules": [
                        {
                            "ExpirationInDays": "!Explode Foo",
                            "Status": "Enabled"
                        }
                    ]
                }
            }
        }
    }
}
