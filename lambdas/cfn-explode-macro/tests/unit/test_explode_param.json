{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Transform": "Explode",
    "Parameters": {
        "Ports": {
            "Description": "The ports to open",
            "Type": "CommaDelimitedList",
            "Default": "[]"
        }
    },
    "Resources": {
        "SecurityGroup": {
            "ExplodeParam": "Ports",
            "Type": "AWS::EC2::SecurityGroup",
            "Properties": {
                "GroupDescription": "Instance security group",
                "SecurityGroupIngress": [
                    {
                        "CidrIp": "0.0.0.0/0",
                        "FromPort": "!Explode Port",
                        "ToPort": "!Explode Port",
                        "IpProtocol": "tcp"
                    }
                ]
            }
        }
    }
}
