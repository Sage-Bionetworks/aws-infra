{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Transform": "Explode",
    "Mappings": {
        "BucketMap": {
            "Monthly": {
                "ResourceName": "MyThirtyDayBucket",
                "Retention": 30
            },
            "Yearly": {
                "Retention": 365
            }
        }
    },
    "Resources": {
        "Bucket": {
            "Type": "AWS::S3::Bucket",
            "Properties": {
                "LifecycleConfiguration": {
                    "Rules": [
                        {
                            "ExpirationInDays": 10,
                            "Status": "Enabled"
                        }
                    ]
                }
            }
        }
    }
}
